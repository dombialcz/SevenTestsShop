{
  "request": {
    "url": "/api/products/[a-f0-9]{24}$",
    "method": "GET"
  },
  "name": "getProductById",
  "isArray": false,
  "responses": {
    "success": {
      "default": true,
      "status": 200,
      "headers": { "content-type": "application/json" },
      "file": "product-detail.json"
    },
    "notFound": {
      "status": 404,
      "headers": { "content-type": "application/json" },
      "data": {
        "error": "Product not found"
      }
    },
    "invalidId": {
      "status": 400,
      "headers": { "content-type": "application/json" },
      "data": {
        "error": "Invalid product ID format"
      }
    },
    "serverError": {
      "status": 500,
      "headers": { "content-type": "application/json" },
      "data": {
        "error": "Internal server error"
      }
    }
  }
}
